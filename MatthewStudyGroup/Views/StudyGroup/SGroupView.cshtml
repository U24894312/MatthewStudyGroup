
@model IEnumerable<MatthewStudyGroup.Models.StudyGroupClass>
@{
    ViewBag.Title = "list of students";
}

<h2>List of students</h2>

<table class="table" id="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.stNumber)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.myLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delete)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.stNumber)
            </td>

            <td>
                @Html.DisplayFor(model => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(model => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(model => item.Email)
            </td>
            <td>
                <a href="@Url.Content(item.myLink)" class="btn btn-primary" target="_">Link</a>
            </td>
            <td>
                <button class="btn btn-primary" onclick="delete_Row(this)">Delete </button>
            </td>

        </tr>

    }
    </table>
<script>
    function delete_Row(button)
    {
        var row = button.closest("tr")
        row.remove();
    }

    window.onload = function () {
         

        const rows = document.querySelectorAll('#table tbody tr');

        rows.forEach(row => {
            const cells = row.getElementsByTagName('td');
            const nameCell = cells[1];

            if (nameCell) {
                const name = nameCell.textContent.trim();
                if (name.charAt(0).toUpperCase() === "S") {
                    row.style.color = 'red';
                }
            }
        });
    };
    
</script>
